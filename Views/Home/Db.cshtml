@{
    ViewData["Title"] = "DB | UniversityExcel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <partial name="~/Views/Shared/Components/Navbar.cshtml">
    
    <div class="d-flex flex-column h-100">
        <div class="container px-5">
            <div class="row gx-5 align-items-center">
                <div class="col-xxl-5">
                    <h2 class="fw-bolder mb-3 d-flex align-items-center gap-3">Students<a class="btn btn-danger" asp-action="clearStudent">Limpiar DB</a></h2>

                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.Id</td>
                                    <td>@student.Name</td>
                                    <td>@student.LastName</td>
                                    <td>@student.Email</td>
                                    <td>@student.Phone</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>